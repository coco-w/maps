{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "paths": {
      "@/*": ["src/*"],
      "@api/*": ["src/api/*"],
      "@views/*": ["src/views/*"],
      "@components/*": ["src/components/*"]
    },
    "typeRoots": [
      "node_modules/@types",
      "node_modules/@typed-mxgraph",
      "element-plus/global"
    ]
  },
  "include": ["./src/**/*"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
